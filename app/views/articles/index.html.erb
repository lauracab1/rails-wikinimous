<div class="container articles-list">
  <div class="row justify-content-center">
    <div class="col-8">
      <% @articles.each do |article| %>
        <div class="article">
          <h2><%= link_to article.title, article_path(article) %></h2>
          <p><%= article.content %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
